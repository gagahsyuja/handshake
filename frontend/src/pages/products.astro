---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Browse Products - Handshake">
  <div class="py-12 px-6">
    <div class="max-w-7xl mx-auto">
      <div class="mb-8">
        <h1 class="text-3xl font-bold mb-2">Browse Products</h1>
        <p class="text-gray-600">Discover amazing deals with COD delivery</p>
      </div>

      <!-- Filters -->
      <div class="mb-8 card p-6">
        <div class="grid md:grid-cols-3 gap-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Category
            </label>
            <select id="category-filter" class="input">
              <option value="">All Categories</option>
            </select>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Sort By
            </label>
            <select id="sort-filter" class="input">
              <option value="newest">Newest First</option>
              <option value="price-low">Price: Low to High</option>
              <option value="price-high">Price: High to Low</option>
            </select>
          </div>
          <div class="flex items-end">
            <button id="apply-filters" class="btn btn-primary w-full">
              Apply Filters
            </button>
          </div>
        </div>
      </div>

      <!-- Loading -->
      <div id="loading" class="text-center py-20">
        <div class="inline-block animate-spin rounded-full h-12 w-12 border-b-2 border-primary"></div>
        <p class="mt-4 text-gray-600">Loading products...</p>
      </div>

      <!-- Products Grid -->
      <div id="products-container" class="hidden">
        <div id="products-grid" class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-6">
          <!-- Products will be loaded here -->
        </div>
      </div>

      <!-- Empty State -->
      <div id="empty-state" class="hidden card p-12 text-center">
        <div class="text-6xl mb-4">üîç</div>
        <h2 class="text-2xl font-bold mb-2">No Products Found</h2>
        <p class="text-gray-600 mb-6">Try adjusting your filters or check back later</p>
        <a href="/" class="btn btn-primary">Back to Home</a>
      </div>

      <!-- Error State -->
      <div id="error-state" class="hidden card p-8 text-center">
        <div class="text-6xl mb-4">‚ùå</div>
        <h2 class="text-2xl font-bold mb-2">Failed to Load Products</h2>
        <p class="text-gray-600 mb-6">Something went wrong. Please try again.</p>
        <button onclick="window.location.reload()" class="btn btn-primary">Retry</button>
      </div>
    </div>
  </div>

  <script>
    import { getProducts, getCategories, type Product, type Category } from '../utils/api';

    const loading = document.getElementById('loading');
    const productsContainer = document.getElementById('products-container');
    const productsGrid = document.getElementById('products-grid');
    const emptyState = document.getElementById('empty-state');
    const errorState = document.getElementById('error-state');
    const categoryFilter = document.getElementById('category-filter') as HTMLSelectElement;
    const sortFilter = document.getElementById('sort-filter') as HTMLSelectElement;

    let allProducts: Product[] = [];

    // Load categories for filter
    async function loadCategories() {
      try {
        const categories: Category[] = await getCategories();
        categories.forEach(category => {
          const option = document.createElement('option');
          option.value = category.id.toString();
          option.textContent = `${category.icon || ''} ${category.name}`.trim();
          categoryFilter.appendChild(option);
        });
      } catch (error) {
        console.error('Failed to load categories:', error);
      }
    }

    // Load products
    async function loadProducts() {
      loading?.classList.remove('hidden');
      productsContainer?.classList.add('hidden');
      emptyState?.classList.add('hidden');
      errorState?.classList.add('hidden');

      try {
        const categoryId = categoryFilter.value ? parseInt(categoryFilter.value) : undefined;
        const products = await getProducts(categoryId, 100);

        allProducts = products;
        applySorting();
        displayProducts();

        loading?.classList.add('hidden');
      } catch (error) {
        console.error('Failed to load products:', error);
        loading?.classList.add('hidden');
        errorState?.classList.remove('hidden');
      }
    }

    // Apply sorting
    function applySorting() {
      const sortValue = sortFilter.value;

      switch (sortValue) {
        case 'price-low':
          allProducts.sort((a, b) => a.price - b.price);
          break;
        case 'price-high':
          allProducts.sort((a, b) => b.price - a.price);
          break;
        case 'newest':
        default:
          allProducts.sort((a, b) => b.id - a.id);
          break;
      }
    }

    // Display products
    function displayProducts() {
      if (!productsGrid) return;

      if (allProducts.length === 0) {
        productsContainer?.classList.add('hidden');
        emptyState?.classList.remove('hidden');
        return;
      }

      productsContainer?.classList.remove('hidden');
      emptyState?.classList.add('hidden');

      productsGrid.innerHTML = allProducts.map(product => `
        <a href="/product/${product.id}" class="card block group">
          <div class="aspect-square bg-gray-100 flex items-center justify-center overflow-hidden">
            ${product.image_url
              ? `<img src="${product.image_url}" alt="${product.title}" class="w-full h-full object-cover group-hover:scale-105 transition" />`
              : '<div class="text-6xl opacity-30">üì¶</div>'
            }
          </div>
          <div class="p-4">
            <div class="mb-2">
              <span class="text-xs font-medium text-primary bg-primary/10 px-2 py-1 rounded">
                ${product.category_name}
              </span>
            </div>
            <h3 class="font-medium mb-1 truncate group-hover:text-primary transition">
              ${product.title}
            </h3>
            <p class="text-lg font-bold text-primary mb-2">
              Rp ${product.price.toLocaleString()}
            </p>
            <span class="inline-block bg-green-500 text-white text-xs font-semibold px-2 py-1 rounded">
              COD Available
            </span>
          </div>
        </a>
      `).join('');
    }

    // Event listeners
    document.getElementById('apply-filters')?.addEventListener('click', loadProducts);

    sortFilter.addEventListener('change', () => {
      applySorting();
      displayProducts();
    });

    // Initial load
    loadCategories();
    loadProducts();
  </script>
</MainLayout>
